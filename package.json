{
  "name": "vizcore",
  "version": "0.1.0",
  "description": "A high-performance data visualization framework for enterprise data challenges",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "test:integration": "cd tests/integration && npm install && npm test",
    "test:k8s": "bash scripts/test-k8s-integration.sh",
    "test:local": "bash scripts/test-local.sh",
    "start": "cd packages/core && npm start",
    "start:dev": "cd packages/core && npm run start:dev",
    "dev": "lerna run dev --parallel",
    "clean": "lerna clean",
    "bootstrap": "lerna bootstrap"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "lerna": "^7.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
