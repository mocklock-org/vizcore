{
  "name": "@vizcore/integration-tests",
  "version": "0.1.0",
  "description": "Integration tests for VizCore Kubernetes deployment",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "testTimeout": 30000,
    "verbose": true
  }
}
